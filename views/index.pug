extends layout.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
    div(class="splash_nav_container")
        h1
            a(href="/") goodbois

        div(class="navbar")
            nav(id="sign-up-nav")
                a(href="/users/signup") Sign Up
            nav(id="sign-in-nav")
                a(href="/users/login") Log In
            nav(id="demo-nav")
                form(class="buttons" action='/users/login' method='post')
                    input(type='hidden' name='_csrf' value=csrfToken)
                    input(type='hidden' name='email' value='demo@gmail.com')
                    input(type='hidden' name='password' value='Demo@1')
                    button(type='submit' class='demo-btn') Demo
                        //- a(href="/profile/demo")
                //- a(href="/profile/demo") Demo Login
            //- only if user is logged in or in demo mode
            //- nav
            //-     a(href="/logout") Log Out
    br
    br
    br
    div(id="h2_title")
        h2 Find Your Next Favorite Dog Park.
    br
    br
    div(class="splash_img_container")
        img(src="/images/dog-3.jpg" alt="2 dogs in a park" height="500" width="700")
    br
    div(class="parks_links")
        h3: a(href="/parks") Parks
    footer
        div(class="github_links")
            h2: a(href="https://github.com/ShanFalk" target="_blank") Shannon Falk
            h2: a(href="https://github.com/oliviabir" target="_blank") Olivia Bir
