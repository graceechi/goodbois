extends layout.pug

block content
    div
        ul
            li= park.name
            li= park.city
            li= park.state
            li= park.description
            li= park.smallDogArea
            li= park.doggieWaterFountain
            li= park.fullyFenced
            li= park.parkSize
            li= park.parkingLot
            li= park.wasteDisposal
            li= park.agilityEquipment
            li= park.shaded
    div
        a(href=`/parks/${park.id}/edit`) Edit
    div
        h2 Reviews
        div(id=`review-display-${park.Reviews.id}`)
            each review in park.Reviews
                div(id=`${review.id}-review-container`)
                    div= review.rating
                    div= review.title
                    div= review.body
                    if loggedInUser === review.userId
                        button(type='submit' id='edit-review-button' class='button') Edit
                        button(type='submit' class='delete-review-button') Delete
                br
                br
        if locals.authenticated
            p: a(href=`/parks/${park.id}/review`) Leave a Review
