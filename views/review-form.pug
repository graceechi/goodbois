extends layout.pug

include utils.pug

block content
  div(id='review-container')
    form(action='/parks/:id/review' method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      input(type='hidden' name='parkId' value=park.id)
      div
        div= park.name
      div
        label Rating:
        select(id='rating-id' name='rating' required)
          option(value='5') 5
          option(value='4') 4
          option(value='3') 3
          option(value='2') 2
          option(value='1') 1
      div
        label Title:
        input(type='text' name='reviewTitle' required)
      div
        label What Did You Think?
        textarea(name='reviewDescription' required)
      div
        button(type='submit') Log In
        a(href='/' class='cancel-btn') Cancel
